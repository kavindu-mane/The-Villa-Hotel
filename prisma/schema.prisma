generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("MIGRATE_DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum RoomType {
  Deluxe
  Standard
  Superior
}

enum FoodType {
  Fried_Rice
  Kottu
  Soup
  Appetizer
  Nasi_Goraeng
  Pasta
  Desert
  Cheese_Kottu
  Submarine
  Hot
  Mojito
  Milk_Shake
  Fresh_Fruit_juice
  Soft_Drink
}

enum TableType {
  One_Seat
  Two_Seat
  Four_Seat
  Six_Seat
}

enum Status {
  Pending
  Confirmed
  Cancelled
  Ongoing
  CheckIn
  Finished
}

enum BookingType {
  Online
  Offline
}

enum BedTypes {
  Two_Single_Beds
  One_Double_Bed
}

enum RoomReservationType {
  Full_Board
  Half_Board
}

model User {
  id               String             @id @default(cuid())
  name             String?
  username         String?            @unique
  email            String?            @unique
  emailVerified    DateTime?
  image            String?
  password         String?
  role             Role               @default(USER)
  coins            Float              @default(0)
  account          Account?
  rommReservation  RoomReservation[]
  tableReservation TableReservation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String  @unique
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? @db.Text
  access_token             String? @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? @db.Text
  session_state            String?
  refresh_token_expires_in Int?
  user                     User?   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model VerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, token])
}

model ReservationCancelToken {
  id                 String   @id @default(cuid())
  roomReservationId  String?  @unique
  tableReservationId String?  @unique
  token              String
  expiresAt          DateTime

  roomReservation  RoomReservation?  @relation(fields: [roomReservationId], references: [id])
  tableReservation TableReservation? @relation(fields: [tableReservationId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rooms {
  id              String            @id @default(cuid())
  number          Int               @unique
  type            RoomType
  price           Float
  persons         Int
  beds            Json
  features        Json
  images          Json
  images360       String?
  roomReservation RoomReservation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Foods {
  id                  String                @id @default(cuid())
  foodId              String                @unique
  name                String
  foodType            FoodType
  price               Float
  description         String
  images              Json
  FoodReservationItem FoodReservationItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tables {
  id               String             @id @default(cuid())
  tableId          String             @unique
  tableType        TableType
  price            Float
  description      String
  images           Json
  tableReservation TableReservation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RoomReservation {
  id                     String                  @id @default(cuid())
  reservationNo          Int                     @unique @default(autoincrement())
  roomId                 String
  userId                 String?
  offerId                String?
  name                   String?
  email                  String?
  phone                  String?
  checkIn                DateTime
  checkOut               DateTime
  total                  Float                   @default(0)
  coins                  Float                   @default(0)
  paidAmount             Float                   @default(0)
  offerDiscount          Float                   @default(0)
  status                 Status                  @default(Confirmed)
  bed                    BedTypes?               @default(One_Double_Bed)
  type                   BookingType             @default(Online)
  roomReservationType    RoomReservationType     @default(Half_Board)
  Payments               Payments[]
  foodReservation        FoodReservation?
  reservationCancelToken ReservationCancelToken?

  room  Rooms  @relation(fields: [roomId], references: [id])
  user  User?  @relation(fields: [userId], references: [id])
  offer Offer? @relation(fields: [offerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TableReservation {
  id            String      @id @default(cuid())
  reservationNo Int         @unique @default(autoincrement())
  tableId       String
  offerId       String?
  userId        String?
  name          String?
  email         String?
  phone         String?
  date          DateTime
  timeSlot      String
  total         Float       @default(0)
  coins         Float       @default(0)
  offerDiscount Float       @default(0)
  status        Status      @default(Confirmed)
  type          BookingType @default(Online)

  foodReservation        FoodReservation?
  reservationCancelToken ReservationCancelToken?

  table Tables @relation(fields: [tableId], references: [id])
  user  User?  @relation(fields: [userId], references: [id])
  offer Offer? @relation(fields: [offerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FoodReservation {
  id                 String      @id @default(cuid())
  roomReservationId  String?     @unique
  tableReservationId String?     @unique
  specialRequirement String?
  status             Status      @default(Confirmed)
  type               BookingType @default(Online)

  foodReservationItems FoodReservationItem[]

  roomReservation  RoomReservation?  @relation(fields: [roomReservationId], references: [id], onDelete: Cascade)
  tableReservation TableReservation? @relation(fields: [tableReservationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FoodReservationItem {
  id                String  @id @default(cuid())
  foodId            String
  offerId           String?
  offerDiscount     Float   @default(0)
  coins             Float   @default(0)
  foodReservationId String
  quantity          Int
  total             Float

  food            Foods           @relation(fields: [foodId], references: [id])
  foodReservation FoodReservation @relation(fields: [foodReservationId], references: [id], onDelete: Cascade)
  offer           Offer?          @relation(fields: [offerId], references: [id])

  @@unique([foodId, foodReservationId])
}

model Offer {
  id          String   @id @default(cuid())
  code        String   @unique
  discount    Float
  description String
  validFrom   DateTime
  validTo     DateTime

  rommReservation     RoomReservation[]
  tableReservation    TableReservation[]
  foodReservationItem FoodReservationItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payments {
  id            String      @id @default(cuid())
  reservationId String
  amount        Float
  paymentType   BookingType

  roomreservation RoomReservation @relation(fields: [reservationId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
